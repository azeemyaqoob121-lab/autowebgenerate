# ============================================================================
# AutoWeb Outreach AI - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control (it's in .gitignore)
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
APP_NAME="AutoWeb Outreach AI API"
API_VERSION=0.1.0
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=True  # Set to False in production
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database_name
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/autoweb_db

# Production example (use environment-specific values):
# DATABASE_URL=postgresql://autoweb_user:secure_password@db-host:5432/autoweb_prod_db

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------
# JWT Secret Key - MUST be changed in production!
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production-use-secrets-token-urlsafe

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=7  # 7 days

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ----------------------------------------------------------------------------
# Redis Configuration (for caching and rate limiting)
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Production example with password:
# REDIS_HOST=redis-server.example.com
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# ----------------------------------------------------------------------------
# External API Configuration
# ----------------------------------------------------------------------------
# OpenAI API for GPT-4 website generation
OPENAI_API_KEY=your-openai-api-key-here

# ----------------------------------------------------------------------------
# Web Scraping Configuration (optional)
# ----------------------------------------------------------------------------
# USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
# SCRAPING_DELAY=1.0  # Delay between requests in seconds

# ----------------------------------------------------------------------------
# Email Configuration (optional, for notifications)
# ----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourapp.com

# ----------------------------------------------------------------------------
# Monitoring and Observability (optional)
# ----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# ----------------------------------------------------------------------------
# Rate Limiting Configuration
# ----------------------------------------------------------------------------
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_PER_MINUTE=100

# ============================================================================
# IMPORTANT PRODUCTION NOTES:
# ============================================================================
# 1. Generate a strong SECRET_KEY using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 2. Set DEBUG=False in production
# 3. Use strong database passwords
# 4. Restrict CORS_ORIGINS to your actual domains
# 5. Use environment-specific DATABASE_URL
# 6. Enable HTTPS in production
# 7. Consider using a secret management service (AWS Secrets Manager, HashiCorp Vault)
# ============================================================================
