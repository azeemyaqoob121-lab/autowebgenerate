# AutoWeb Outreach AI - Environment Variables Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file to Git!

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Environment: development, production, or test
ENVIRONMENT=development

# Enable debug mode (set to False in production)
DEBUG=True

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/autoweb_db

# ==============================================================================
# REDIS CONFIGURATION (for task queue and caching)
# ==============================================================================

REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# JWT Secret Key - MUST be changed in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION

# JWT Algorithm
JWT_ALGORITHM=HS256

# JWT Token expiration in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==============================================================================
# API KEYS - REQUIRED FOR APPLICATION TO WORK
# ==============================================================================

# OpenAI API Key (REQUIRED for GPT-4 template generation)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google API Key (REQUIRED for PageSpeed Insights / Lighthouse API)
# Get your key at: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=AIza-your-google-api-key-here

# ==============================================================================
# PREMIUM MEDIA APIS (Optional but recommended)
# ==============================================================================

# Unsplash API Access Key (FREE tier: 50 requests/hour)
# Get your key at: https://unsplash.com/oauth/applications
UNSPLASH_API_KEY=your-unsplash-access-key-here

# Pexels API Key (FREE tier: 200 requests/hour)
# Get your key at: https://www.pexels.com/api/
PEXELS_API_KEY=your-pexels-api-key-here

# ==============================================================================
# PREMIUM TEMPLATE FEATURES
# ==============================================================================

# Enable premium template generation (glassmorphism, animations, rich media)
PREMIUM_TEMPLATE_MODE=True

# Number of images to fetch per business template (12-20 recommended)
DEFAULT_IMAGE_COUNT=15

# Enable hero background video fetching from Pexels
ENABLE_VIDEO_BACKGROUNDS=True

# ==============================================================================
# CORS CONFIGURATION (for frontend access)
# ==============================================================================

# Allowed CORS origins (comma-separated list or JSON array)
# Production example: CORS_ORIGINS=["https://yourfrontend.com","https://www.yourfrontend.com"]
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=True

# Allowed HTTP methods for CORS
CORS_ALLOW_METHODS=*

# Allowed HTTP headers for CORS
CORS_ALLOW_HEADERS=*

# ==============================================================================
# INSTRUCTIONS
# ==============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API keys in the .env file
# 3. NEVER commit the .env file to Git
# 4. For production, change JWT_SECRET and set DEBUG=False
# 5. Enable HTTPS and set ENVIRONMENT=production for production deployments
